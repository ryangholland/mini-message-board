<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <hr>
    <ul>
      <% messages.forEach(message => { %>
        <li>
          <h2>"<%= message.text %>"</h2>
          <h3>- <%= message.user %></h3>
          <p><%= message.added %></p>
        </li>
        <hr>
      <% }); %>
    </ul>
    <p><a href="/new">Post a New Message</a></p>

  </body>
</html>
